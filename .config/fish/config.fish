# Comandos para configurar  oh-my-fish
set -g theme_display_user yes                 # Mostrar usuario
set -g fish_prompt_pwd_dir_length -1          # Mostrar path completo
set -g theme_display_git_default_branch yes   # Mostrar branch
set -g theme_newline_cursor yes               # Escribir comando una linea abajo
set -g theme_newline_prompt '> '              # Icono de la nueva linea
set -g theme_color_scheme dark                # Tema